<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Activities.RegistrationActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="50dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:shadowColor="#70000000"
                android:shadowDx="2"
                android:shadowDy="3"
                android:shadowRadius="3"
                android:text="Sign Up"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:fontFamily="@font/taile" />

            <EditText
                android:id="@+id/registration_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:backgroundTint="@android:color/white"
                android:ems="10"
                android:fontFamily="@font/taile"
                android:hint="Name"
                android:inputType="textPersonName"
                android:shadowColor="#70000000"
                android:shadowDx="0"
                android:shadowDy="6"
                android:shadowRadius="3"
                android:textColor="#FFFFFF"
                android:textColorHint="@android:color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/registration_email_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:backgroundTint="@android:color/white"
                android:ems="10"
                android:fontFamily="@font/taile"
                android:hint="Email"
                android:inputType="textPersonName"
                android:shadowColor="#70000000"
                android:shadowDx="0"
                android:shadowDy="6"
                android:shadowRadius="3"
                android:textColor="#FFFFFF"
                android:textColorHint="@android:color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/registration_password_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:backgroundTint="@android:color/white"
                android:ems="10"
                android:fontFamily="@font/taile"
                android:hint="Create Password"
                android:inputType="textPassword"
                android:shadowColor="#70000000"
                android:shadowDx="0"
                android:shadowDy="6"
                android:shadowRadius="3"
                android:textColor="#FFFFFF"
                android:textColorHint="@android:color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/registration_confirm_password_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:backgroundTint="@android:color/white"
                android:ems="10"
                android:fontFamily="@font/taile"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:shadowColor="#70000000"
                android:shadowDx="0"
                android:shadowDy="6"
                android:shadowRadius="3"
                android:textColor="#FFFFFF"
                android:textColorHint="@android:color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/registration_signup_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="20dp"
                android:background="@color/colorPrimaryDark"
                android:elevation="5dp"
                android:fontFamily="@font/taile"
                android:shadowColor="#70000000"
                android:shadowDx="2"
                android:shadowDy="6"
                android:shadowRadius="2"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>